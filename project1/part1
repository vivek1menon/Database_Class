CREATE TABLE Product( 
                  make CHAR(30), 
                  model CHAR(10) primary key, 
                  type CHAR(15)
                    );
CREATE TABLE PC (
                 model CHAR(10) primary key,
                 speed DECIMAL(4,2),
                 ram   INTEGER,
                 hd    INTEGER,
                 price DECIMAL(7,2)
                );
CREATE TABLE Laptop(
                  model CHAR(10) primary key,
                  speed DECIMAL(4,2),
                  ram INTEGER,
                  hd  INTEGER,
                  screen DECIMAL(3,1),
                  price  DECIMAL(7,2)
                );
CREATE TABLE Printer(
                   model CHAR(10) primary key,
                   color CHAR(6),
                   type  CHAR(10),
                   price  DECIMAL(7,2)
                  );